doctype
html(ng-app="MyBot", ng-cloak)
    head
        title Your Logs

        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")

        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous")

        style [ng\:cloak], [ng-cloak] { display: none;}

    body

        
          
        div(class='container',ng-controller='LogsController')
            div(ng-if="!showMenu")
                |<h1>{{message}} </h1>

            div(class='container',ng-if="showMenu")
                ul(class=("list-group"))
                    li(class=("list-group-item"),ng-repeat='log in logs', style="padding: 10px 10px 10px 10px;  background-color:#D1F8B6;")
                        div(class="container")
                            div(class="row row-header",style=("padding-right: 10px;") )
                                div(class="col-xs-12 col-sm-8 col-lg-8")
                                    h2
                                        span(class="label",class=("label-danger")) {{log.logName}}
                                         
                                div(class="col-xs-12 col-sm-4 col-lg-4")
                                    h4
                                        span(class="badge") {{log.time | date:'hh: mm - dd, MMM, yyyy'}}
                            div(class="row")
                                h3 {{log.note}}
                            div(class="row")
                                div(class="col-xs-12 col-sm-8 col-lg-8")
                                    h3
                                        span(class="label label-primary") {{log.activity.type}}
                                div(class="col-xs-12 col-sm-8 col-lg-8")
                                    span(class="label label-success") Habit: {{log.activity.habit}}


        script(src= 'https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.js')
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js")
        script(src="//unpkg.com/angular-ui-router/release/angular-ui-router.min.js")
        script(src= '../angular-resource.min.js')
        script(src= '../app.js')
        script(src= '../service.js')
        script(src= '../controller.js')
        
        



